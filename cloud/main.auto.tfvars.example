#see variables.tf for details and other options
alert_email          = "myemail@gmail.com"
dns_tunnel_domain    = "mydomain.com"
dns_tunnel_password  = "password456"
emable_azure         = false
enable_icmp_tunnel   = false
https_proxy_password = "password456"

#example using Hurricane Electric's dynamic DNS service to set the VPN host's DNS record
custom_pre_config    = "curl https://dyn.dns.he.net/nic/update?hostname=vpn.mydomain.com&password=password123"

wireguard_config = {
  enable              = true
  client_public_key   = "your_pubkey_here"
}

ipsec_vpn_config = {
  enable          = true
}

ipsec_vpn_secrets = {
  psk             = "a_psk"
  password        = "a_password"
}
